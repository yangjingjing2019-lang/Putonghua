  <script>
    const questions = [
      { word: "åª½", pinyin: "mÄ", answer: "m", options: ["m", "n", "l", "r"] },
      { word: "çˆ¸", pinyin: "bÃ ", answer: "b", options: ["b", "p", "m", "f"] },
